/*
 * Reshapes a given image
 */
function resampimage( $forcedwidth, $forcedheight, $sourcefile, $destfile, $mtype) {
  
  set_time_limit(0);

  $fw = $forcedwidth;
  $fh = $forcedheight;
  $is = getimagesize( $sourcefile );

  if ( $is[0] > $fw || $is[1] > $fh ) {
    if( ( $is[0] - $fw ) >= ( $is[1] - $fh ) )
    {
        $iw = $fw;
        $ih = ( $fw / $is[0] ) * $is[1];
    }
    else
    {
        $ih = $fh;
        $iw = ( $ih / $is[1] ) * $is[0];
    }
    $t = 1;
  }
  else {
    $iw = $is[0];
    $ih = $is[1];
    $t = 2;
  }
  if ( $t == 1 ) {
    if ($mtype=='image/gif') {
      $img_src = imagecreatefromgif( $sourcefile );
      $img_dst = imagecreatetruecolor( $iw, $ih );
      imagecopyresampled( $img_dst, $img_src, 0, 0, 0, 0, $iw, $ih, $is[0], $is[1] );
      if( !imagegif( $img_dst, $destfile, 100 ) ) {
        exit( );
      }
    }
    else if ($mtype=='image/jpeg') { 
      $img_src = imagecreatefromjpeg( $sourcefile );
      $img_dst = imagecreatetruecolor( $iw, $ih );
      imagecopyresampled( $img_dst, $img_src, 0, 0, 0, 0, $iw, $ih, $is[0], $is[1] );
      if( !imagejpeg( $img_dst, $destfile, 100 ) ) {

        return FALSE;
      }
      return TRUE;
    }

    else if ($mtype=='image/png') {
      $img_src = imagecreatefrompng( $sourcefile );
      $img_dst = imagecreatetruecolor( $iw, $ih );
      imagecopyresampled( $img_dst, $img_src, 0, 0, 0, 0, $iw, $ih, $is[0], $is[1] );
      if( !imagepng( $img_dst, $destfile, 0, PNG_ALL_FILTERS ) ) {
          exit( );
      }
    }

    else if ($mtype=='image/bmp') {
      $img_src = imagecreatefrombmp( $sourcefile );
      $img_dst = imagecreatetruecolor( $iw, $ih );
      imagecopyresampled( $img_dst, $img_src, 0, 0, 0, 0, $iw, $ih, $is[0], $is[1] );
      if( !imagebmp( $img_dst, $destfile ) )
      {
          exit( );
      }
    }
  }
  else if ( $t == 2 ) {
  copy( $sourcefile, $destfile );
  }
}// End of resampimage()
