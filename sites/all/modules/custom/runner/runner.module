<?php
/**
 * Init function for adding the external file
 */

function runner_init(){
  //to add the js file
  drupal_add_js(drupal_get_path("module","runner")."/runner.js");
  drupal_add_css(drupal_get_path('module', 'runner') . '/runner.css');
}

