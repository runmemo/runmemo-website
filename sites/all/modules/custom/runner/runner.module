  $form['submit'] = array('#type' => 'submit','#value' => '','#attributes'=>array('onclick'=>'return find_recent_event1();'));
     
  return  $form;
  
}

/**
 * For testing purpose
 * @param type $form
 * @param type $form_state 
 */
function recent_event1_image_submit($form,&$form_state){
  $runner_number_search = new runner_number_search();
  $recent_event1 = $runner_number_search->get_recent_event_id(0,1);
  $runner_number = $form['runner_number']['#value'];
  $path = 'search-number/' . $recent_event1 . '/' . $runner_number;
  drupal_goto($path);
}

